@model IEnumerable<MiniLojaVirtual.Core.Produto>

@{
    ViewData["Title"] = "Meus Produtos";
}

<h2>Meus Produtos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Produto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Imagem</th>
            <th>Nome</th>
            <th>Pre√ßo</th>
            <th>Estoque</th>
            <th>Categoria</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.ImagemUrl" width="60" /></td>
            <td>@item.Nome</td>
            <td>R$ @item.Preco</td>
            <td>@item.Estoque</td>
            <td>@item.Categoria?.Nome</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
